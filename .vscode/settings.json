{
  "latex-workshop.latex.recipes": [
    {
      "name": "xelatex",
      "tools": [
        "xelatex"
      ]
    }
  ],
  "latex-workshop.latex.tools": [
    {
      "name": "xelatex",
      "command": "xelatex",
      "args": [
        "-synctex=1",
        "-interaction=nonstopmode",
        "-file-line-error",
        "-output-directory=%OUTDIR%",
        "%DOC%"
      ],
      "env": {
        "TEXINPUTS": "%WORKSPACE_FOLDER%/application_documents/styles//:"
      }
    }
  ],
  "latex-workshop.latex.outDir": "%DIR%/output"
}